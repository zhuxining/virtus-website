{
  "compilerOptions": {
    // Modules
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",

    // JSX
    "jsx": "react-jsx",

    // Strictness
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,

    // Paths
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
